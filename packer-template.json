{
    "builders": [
        {
            "client_id": "{{user `client_id`}}",
            "client_secret": "{{user `client_secret`}}",
            "communicator": "winrm",
            "image_offer": "{{user `image_offer`}}",
            "image_publisher": "{{user `image_publisher`}}",
            "image_sku": "{{user `image_sku`}}",
            "location": "{{user `location`}}",
            "managed_image_name": "{{user `managed_image_name`}}",
            "managed_image_resource_group_name": "{{user `resource_group`}}",
            "object_id": "{{user `object_id`}}",
            "os_type": "Windows",
            "subscription_id": "{{user `subscription_id`}}",
            "tenant_id": "{{user `tenant_id`}}",
            "type": "azure-arm",
            "vm_size": "Standard_D3_v2",
            "winrm_insecure": "true",
            "winrm_timeout": "15m",
            "winrm_use_ssl": "true",
            "winrm_username": "packer"
        }
    ],
    "post-processors": [],
    "provisioners": [ // 'type' key inside every element specifies the type of provisioner
        {
            "inline": [ //  This is an array of commands to execute. The commands are concatenated by newlines and turned into a single file, so they are all executed within the same context
                "cmd /c \"if exist c:\\\\DeployTemp rd /s /q c:\\\\DeployTemp\"", // Check whether the c:\DeployTemp directoy already exists or not. If it exists then remove the directory. The 'rd' command is for remove directory, /s is for deleting the directory tree, /q is for running the command in quiet mode without prompting user for confirmation
                "cmd /c \"mkdir c:\\\\DeployTemp\"" // If it does not exists then create the directory
            ],
            "type": "windows-shell" // Run the above command using 'cmd' i.e command prompt
        },
        {
            "destination": "c:\\DeployTemp", // The path where the file will be uploaded to in the machine
            "source": "{{user `package_path`}}", // The path to a local file or directory to upload to the machine
            "type": "file" // The file Packer provisioner uploads files to machines built by Packer
        },
        {
            "destination": "c:\\", // The path where the file will be uploaded to in the machine
            "source": "{{user `package_path`}}\\WindowsApp1\\bin\\Release\\WindowsApp1.exe", // The path to a local file or directory to upload to the machine
            "type": "file" // The file Packer provisioner uploads files to machines built by Packer
        },
        {
            "inline": [ //  This is an array of commands to execute. The commands are concatenated by newlines and turned into a single file, so they are all executed within the same context
                "cd \"C:\\DeployTemp\"", // Change the context to C:\DeployTemp
                "ls", // List all the contents
                "C:\\DeployTemp\\{{user `package_name`}}\\{{user `script_relative_path`}} {{user `script_arguments`}}" // Runs our deployment script using the optional deployment script arguments
            ],
            "type": "powershell" // The PowerShell Packer provisioner runs PowerShell scripts on Windows machines.
        },
        {
            "inline": [
                "if( Test-Path $Env:SystemRoot\\windows\\system32\\Sysprep\\unattend.xml ){ rm $Env:SystemRoot\\windows\\system32\\Sysprep\\unattend.xml -Force}", // ??
                "\u0026 $Env:SystemRoot\\System32\\Sysprep\\Sysprep.exe /oobe /generalize /quit /quiet" // ??
            ],
            "type": "powershell" // The PowerShell Packer provisioner runs PowerShell scripts on Windows machines.
        }
    ],
    "variables": {
        "capture_name_prefix": "",
        "client_id": "",
        "client_secret": "",
        "image_offer": "",
        "image_publisher": "",
        "image_sku": "",
        "location": "",
        "managed_image_name": "",
        "object_id": "",
        "package_name": "",
        "package_path": "",
        "resource_group": "",
        "script_arguments": "",
        "script_relative_path": "",
        "storage_account": "",
        "subscription_id": "",
        "tenant_id": ""
    }
}